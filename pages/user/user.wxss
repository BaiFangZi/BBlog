.user {
  height: 100%;
  display: flex;
  padding: 20rpx;
  flex-direction: column;
}

.user .user-info__container {
  display: flex;
  height: 200rpx;
  width: 100%;
  padding: 20rpx;
  border: 1px solid #e8e8e8;
  border-radius: 20rpx;
}

.user .user-info__container .avatar {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #e8e8e8;
  border-radius: 50%;
  margin-left: 30rpx;
}

.user .user-info__container .nickname {
  flex: 1;
  text-align: center;
  line-height: 200rpx;
}

.user .user-menu__container {
  margin: 20rpx 0;
  border: 1px solid #e8e8e8;
  border-radius: 20rpx;
  flex: 1;
}

.user .user-logout__button {
  background-color: #d43c33;
  border: none;
}

.user .user-loading__container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.user .user-loading__block {
  width: 120px;
  height: 120px;
  background-color: #fff;
}

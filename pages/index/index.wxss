.post-scroll {
  display: flex;
  height: 1000rpx;
  flex-direction: column;
}

.post-scroll .post-card {
  padding: 20rpx;
  margin: 20rpx;
  height: 500rpx;
  border: 1px solid #e8e8e8;
  border-radius: 20rpx;
}

.post-scroll .post-card .post-card-image {
  height: 60%;
  width: 100%;
  background-size: cover;
}

.post-scroll .post-card .post-card-content {
  height: 20%;
}

.post-scroll .post-card .post-card-content .title {
  font-size: 28rpx;
}

.post-scroll .post-card .post-card-content .text {
  margin: 15rpx 0;
  font-size: 25rpx;
}

.post-scroll .post-card .post-card-content .info {
  height: 10%;
  display: flex;
  font-size: 20rpx;
  justify-content: space-between;
}

.reach-bottom-loading,
.reach-bottom-nomore {
  text-align: center;
  padding: 20rpx;
}
